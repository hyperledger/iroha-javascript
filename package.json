{
    "name": "@iroha/monorepo",
    "version": "0.0.0",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "test": "pnpm test --parallel --filter @iroha2/client --filter @iroha2/crypto --filter @iroha2/i64-fixnum",
        "build": "esno scripts/build",
        "build:clean": "del-cli ./.declaration ./packages/iroha-client/dist ./packages/iroha-data-model/dist",
        "build:rollup": "rollup -c rollup.config.js",
        "build:dts": "tsc -p tsconfig.json --declaration --declarationDir .declaration --emitDeclarationOnly",
        "type-check": "tsc --noEmit",
        "publish-all": "esno scripts/publish-all"
    },
    "devDependencies": {
        "@jest/types": "^27.0.6",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@types/jest": "^26.0.24",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "chalk": "^4.1.2",
        "consola": "^2.15.3",
        "del-cli": "^4.0.1",
        "esbuild-register": "^2.6.0",
        "eslint": "^7.30.0",
        "eslint-config-alloy": "^4.1.0",
        "eslint-plugin-cypress": "^2.11.3",
        "esno": "^0.8.0",
        "execa": "^5.1.1",
        "prettier": "^2.3.2",
        "prettier-eslint": "^12.0.0",
        "rollup": "^2.53.1",
        "rollup-plugin-dts": "^3.0.2",
        "rollup-plugin-esbuild": "^4.5.0",
        "typescript": "^4.3.5"
    }
}
